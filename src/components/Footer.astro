---
import SocialLinks from './SocialLinks.astro';
const today = new Date();
const isEnglish = Astro.url.pathname.startsWith('/en');
---
<footer>
  <div class="footer-content">
    <nav class="footer-links">
      {isEnglish ? (
        <>
          <a href="/en/terms-and-conditions">Terms & Conditions</a>
          <span>|</span>
          <a href="/en/privacy-policy">Privacy Policy</a>
        </>
      ) : (
        <>
          <a href="/terms-and-conditions">Algemene voorwaarden</a>
          <span>|</span>
          <a href="/privacy-policy">Privacy verklaring</a>
        </>
      )}
    </nav>
    <SocialLinks />
    <div class="footer-copyright">
      Â© {today.getFullYear()} Mameleon
    </div>
  </div>
  <style>
    footer {
      text-align: center;
      background: transparent;
      font-size: 0.9em;
    }
    .footer-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5em;
    }
    .footer-links {
      margin: 0.5em 0;
      display: flex;
      gap: 0.5em;
      font-size: 0.95em;
    }
    .footer-links a {
      color: #3c285a;
      text-decoration: underline;
    }
    .footer-links span {
      color: #888;
    }
    .footer-copyright {
      font-size: 0.8em;
      color: #888;
      margin-top: 0.5em;
    }
  </style>
</footer>
