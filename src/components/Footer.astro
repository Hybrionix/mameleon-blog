---
import SocialLinks from './SocialLinks.astro';
const today = new Date();
const pathname = Astro.url.pathname;

// Map current path to the correct legal page in the current language
const isEnglish = pathname.startsWith('/en');
const termsLink = isEnglish ? '/en/terms-and-conditions' : '/algemene-voorwaarden';
const privacyLink = isEnglish ? '/en/privacy-policy' : '/privacy-verklaring';
---
<footer>
  <div class="footer-content">
    <nav class="footer-links">
      <a href={termsLink}>{isEnglish ? 'Terms & Conditions' : 'Algemene voorwaarden'}</a>
      <span>|</span>
      <a href={privacyLink}>{isEnglish ? 'Privacy Policy' : 'Privacy verklaring'}</a>
    </nav>
    <SocialLinks />
    <div class="footer-copyright">
      Â© {today.getFullYear()} Mameleon
    </div>
  </div>
  <style>
    footer {
      text-align: center;
      background: transparent;
      font-size: 0.9em;
    }
    .footer-content {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 0.5em;
    }
    .footer-links {
      margin: 0.5em 0;
      display: flex;
      gap: 0.5em;
      font-size: 0.95em;
    }
    .footer-links a {
      color: #3c285a;
      text-decoration: underline;
    }
    .footer-links span {
      color: #888;
    }
    .footer-copyright {
      font-size: 0.8em;
      color: #888;
      margin-top: 0.5em;
    }
  </style>
</footer>
