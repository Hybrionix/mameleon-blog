---
import HeaderLink from './HeaderLink.astro';
import SocialLinks from './SocialLinks.astro';
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <h2 class="site-title">
      <a href="/">
        <span class="rainbow-text">Mameleon</span>
      </a>
    </h2>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/about">Over mij</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/contact">Contact</HeaderLink>
    </div>
    <SocialLinks />
  </nav>
</header>
<style>
  header {
    margin: 0;
    padding: 0 1em;
    background: transparent;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  }
  nav,
  nav[data-astro-cid-3ef6ksr2] {
    background: linear-gradient(
      90deg,
      #ffacfa 0%,
      #ffd6ec 16%,
      #ffe4ba 32%,
      #cafffa 48%,
      #bae1ff 64%,
      #d1baff 80%,
      #ffacfa 100%
    );
    border-radius: 16px;
    box-shadow: 0 2px 12px rgba(0,0,0,0.04);
    padding: 0.5em 1em;
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 1em;
  }
  .site-title {
    margin: 0;
    font-size: 2em;
    font-weight: bold;
    letter-spacing: 2px;
    line-height: 1;
    display: flex;
    align-items: center;
    gap: 0.5em;
    /* Donkere schaduw ONDER de titel, niet op de tekst */
    filter: none;
    position: relative;
  }
  .site-title a {
    display: inline-block;
    padding: 0.2em 0.8em;
    border-radius: 10px;
    border: 2px solid rgba(0,0,0,0.18);
    background: rgba(255,255,255,0.10);
    position: relative;
    z-index: 1;
  }
  .site-title a::after {
    content: "";
    display: block;
    position: absolute;
    left: 0; right: 0; bottom: -10px; height: 10px;
    border-radius: 0 0 12px 12px;
    box-shadow: 0 8px 18px 0 rgba(60,40,90,0.18);
    z-index: -1;
  }
  .rainbow-text {
    background: linear-gradient(90deg, #a16ae8 0%, #e573c7 40%, #ff69b4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
    font-size: 2.2em;
    font-weight: 900;
    letter-spacing: 2px;
    display: inline-block;
  }
  .internal-links {
    display: flex;
    gap: 0.7em;
  }
  .internal-links a,
  .internal-links button,
  .internal-links HeaderLink {
    display: inline-block;
    padding: 0.5em 1.2em;
    border: 2px solid rgba(0,0,0,0.18);
    border-radius: 8px;
    background: linear-gradient(90deg, #a16ae8 0%, #e573c7 100%);
    color: #fff;
    font-weight: 600;
    font-size: 1em;
    text-decoration: none;
    box-shadow: none;
    transition: background 0.2s, color 0.2s, transform 0.15s, border-color 0.2s;
    cursor: pointer;
  }
  .internal-links a:hover,
  .internal-links button:hover,
  .internal-links HeaderLink:hover {
    background: linear-gradient(90deg, #e573c7 0%, #a16ae8 100%);
    color: #fff;
    border-color: rgba(0,0,0,0.28);
    transform: translateY(-2px) scale(1.05);
    text-decoration: none;
  }
  .social-links {
    display: flex;
    gap: 0.5em;
    align-items: center;
  }
  .social-links a {
    display: flex;
    align-items: center;
    transition: transform 0.2s;
    color: #a16ae8;
  }
  .social-links a:hover {
    transform: scale(1.15) rotate(-6deg);
    color: #e573c7;
  }
  .social-links svg {
    display: block;
  }
  @media (max-width: 900px) {
    nav {
      flex-direction: column;
      align-items: stretch;
      gap: 0.5em;
    }
    .site-title {
      justify-content: center;
      font-size: 1.5em;
    }
    .internal-links {
      justify-content: center;
      flex-wrap: wrap;
      gap: 0.5em;
    }
    .social-links {
      justify-content: center;
    }
  }
  @media (max-width: 600px) {
    .site-title {
      font-size: 1.1em;
    }
    .internal-links a {
      font-size: 0.95em;
      padding: 0.4em 0.7em;
    }
    .social-links svg {
      width: 22px;
      height: 22px;
    }
  }
</style>