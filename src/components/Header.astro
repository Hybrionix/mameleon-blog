---
import HeaderLink from './HeaderLink.astro';
import SocialLinks from './SocialLinks.astro';
import LanguageSwitcher from './LanguageSwitcher.astro';
import HamburgerMenu from './HamburgerMenu.astro';
import { SITE_TITLE } from '../consts';

const { lang = 'nl', nlPath = '/blog/', enPath = '/en/blog/' } = Astro.props;
const getLink = (path) => lang === 'en' ? `/en${path}` : path;
---
<header>
  <nav class="header-bar">
    <div class="header-content">
      <div class="header-section logo-image">
        <a href="/">
          <img src="/mameleon_transparant_430.png" alt="Mameleon Logo" />
        </a>
      </div>
      <div class="header-center">
        <div class="header-section internal-links">
          <HeaderLink href={getLink('/')}>{lang === 'en' ? 'Home' : 'Home'}</HeaderLink>
          <HeaderLink href={getLink('/about')}>{lang === 'en' ? 'About' : 'Over mij'}</HeaderLink>
          <HeaderLink href={lang === 'en' ? '/en/blog/' : '/blog/'}>{lang === 'en' ? 'Blog' : 'Blog'}</HeaderLink>
          <HeaderLink href={getLink('/contact')}>{lang === 'en' ? 'Contact' : 'Contact'}</HeaderLink>
        </div>
        <HamburgerMenu lang={lang} />
      </div>
      <div class="header-section language-switcher-section">
        <LanguageSwitcher lang={lang} nlPath={nlPath} enPath={enPath} />
      </div>
    </div>
  </nav>
  <div class="header-section header-socials">
    <SocialLinks />
  </div>
</header>
<style>
	.logo-image {
	  display: flex;
	  align-items: center;
	  margin-right: 1em;
	}
	.logo-image img {
	  width: 150px; /* or whatever size fits your design */
	  height: auto;
	  object-fit: contain;
	}
  .header-bar {
    width: 100%;
    margin: 0;
    background: linear-gradient(
      90deg,
      #ffacfa 0%,
      #ffd6ec 16%,
      #ffe4ba 32%,
      #cafffa 48%,
      #bae1ff 64%,
      #d1baff 80%,
      #ffacfa 100%
    );
    /* border-radius: 16px; */
    box-shadow: 0 2px 12px rgba(0,0,0,0.04);
    padding: 0.5em 1em;
    border-top: 2px solid #4B2067;
    border-bottom: 2px solid #4B2067;
  }
  .header-content {
    display: flex;
    align-items: center;
    width: 100%;
    max-width: 1000px;
    margin: 0 auto;
    gap: 0.7em;
    justify-content: space-between;
  }
  header {
    /* margin: 10px 0 0 0; */
    /* padding: 0 1em; */
    background: transparent;
    box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  }
  .header-section {
    display: flex;
    align-items: center;
    justify-content: center; /* Center content inside each section */
  }
  .site-title {
    margin: 0;
    font-size: 2em;
    font-weight: bold;
    letter-spacing: 2px;
    line-height: 1;
    gap: 0.5em;
    filter: none;
    position: relative;
  }
  .site-title a {
    display: inline-block;
    /* padding: 0.2em 0.8em; */
    border-radius: 10px;
    border: 0px solid rgba(0,0,0,0.18);
    background: rgba(255,255,255,0.10);
    position: relative;
    /* z-index: 1; */
  }
  .site-title a::after {
    content: "";
    display: block;
    position: absolute;
    left: 0; right: 0; bottom: -10px; height: 10px;
    border-radius: 0 0 12px 12px;
    box-shadow: 0 8px 18px 0 rgba(60,40,90,0.18);
    z-index: -1;
  }
  .rainbow-text {
    background: linear-gradient(90deg, #a16ae8 0%, #e573c7 40%, #ff69b4 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-fill-color: transparent;
    font-size: 2.2em;
    font-weight: 900;
    letter-spacing: 2px;
    display: inline-block;
    /* 3D text border effect */
    text-shadow:
      2px 2px 0 #330075,
      3px 3px 6px #fff,
      0 2px 8px #a16ae8;
  }
  .internal-links {
    display: flex;
    gap: 1em;
    justify-content: center;
    padding-left: 120px;
  }
  .internal-links a,
  .internal-links button,
  .internal-links HeaderLink {
    display: inline-block;
    padding: 0.5em 1.2em;
    /* border: 2px solid rgba(0,0,0,0.18);
    border-radius: 8px;
    background: linear-gradient(90deg, #a16ae8 0%, #e573c7 100%);
	*/
    color: #330075;
    font-weight: 600;
    font-size: 1em;
    text-decoration: none;
    box-shadow: none;
    transition: background 0.2s, color 0.2s, transform 0.15s, border-color 0.2s;
    cursor: pointer;
  }
  .internal-links a:hover,
  .internal-links button:hover,
  .internal-links HeaderLink:hover {
    background: linear-gradient(180deg, rgba(161,106,232,0.5) 0%, rgba(229,115,199,0.5) 100%);
    color: rgb(39, 19, 53);
    border-color: rgba(0,0,0,0.28);
    border-radius: 4px;
    transform: translateY(-2px) scale(1.05);
    text-decoration: none;
  }
  .header-socials {
    margin-top: 0;
    margin-bottom: 0;
    display: flex;
    justify-content: flex-end;
    width: auto;
    background-color: #d1baff;
    border-bottom: 2px solid #4B2067;
  }
  .social-links {
    display: flex;
    gap: 0.5em;
    align-items: center;
  }
  .social-links a {
    display: flex;
    align-items: center;
    transition: transform 0.2s;
    color: #4B2067;
  }
  .social-links a:hover {
    transform: scale(1.15) rotate(-6deg);
    color: #e573c7;
  }
  .social-links svg {
    display: block;
  }
  .language-switcher-section {
  margin-left: 0;
  margin-right: 0;
  display: flex;
  align-items: center;
  padding-left: 1em;
  /* Add border and background for visibility */
  border: 2.5px solid #4B2067;
  background: linear-gradient(90deg, #baffc9 0%, #cafffa 100%);
  border-radius: 14px;
  box-shadow: 0 2px 12px rgba(76, 175, 80, 0.13);
  padding: 0.3em 1.4em;
}

.language-switcher {
  /* Remove border and background here */
  padding: 0.2em 1em;
  display: flex;
  gap: 0.5em;
  justify-content: flex-end;
  align-items: center;
  box-shadow: none;
  transition: box-shadow 0.2s, border-color 0.2s;
}
  .language-switcher a {
    color: #330075;
    font-weight: 600;
    text-decoration: none;
    padding: 0.2em 0.7em;
    border-radius: 6px;
    transition: background 0.2s, color 0.2s;
  }
  .language-switcher a.active,
  .language-switcher a:hover {
    background: #d1baff;
    color: #4B2067;
  }
  @media (max-width: 1000px) {
    .header-bar {
      width: 98%;
      max-width: 98%;
      padding: 0.5em 0.5em;
    }
  }
  @media (max-width: 900px) {
    .header-bar {
      flex-direction: column;
      align-items: stretch;
      gap: 0.5em;
    }
    .site-title {
      justify-content: center;
      font-size: 1.5em;
    }
    .internal-links {
      justify-content: center;
      flex-wrap: wrap;
      gap: 0.5em;
    }
    .header-socials {
      justify-content: center;
      width: 100%;
    }
    .social-links {
      justify-content: center;
    }
  }

  @media (max-width: 800px) {
    .internal-links {
      display: none !important;
    }
    .hamburger-menu {
      display: flex !important;
    }
  }

  @media (min-width: 801px) {
    .hamburger-menu {
      display: none !important;
    }
    .internal-links {
      display: flex !important;
    }
  }

  @media (max-width: 800px) {
    .internal-links a {
      font-size: 0.95em !important;
      padding: 0.4em 0.7em;
    }
    .social-links svg {
      width: 22px !important;
      height: 22px !important;
    }
  }

  @media (max-width: 600px) {
    .site-title {
      font-size: 1.1em;
    }
    .internal-links a {
      font-size: 0.95em;
      padding: 0.4em 0.7em;
    }
    .social-links svg {
      width: 22px;
      height: 22px;
    }
  }
</style>