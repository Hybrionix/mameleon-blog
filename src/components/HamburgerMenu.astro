---
// filepath: src/components/HamburgerMenu.astro
const { lang = 'nl' } = Astro.props;
const getLink = (path) => lang === 'en' ? `/en${path}` : path;
---
<div class="hamburger-menu">
  <input id="menu__toggle" type="checkbox" />
  <label class="menu__btn" for="menu__toggle">
    <span></span>
  </label>
  <ul class="menu__box">
    <li><a class="menu__item" href={getLink('/')}>{lang === 'en' ? 'Home' : 'Home'}</a></li>
    <li><a class="menu__item" href={getLink('/about')}>{lang === 'en' ? 'About' : 'Over mij'}</a></li>
    <li><a class="menu__item" href={lang === 'en' ? '/en/blog/' : '/blog/'}>{lang === 'en' ? 'Blog' : 'Blog'}</a></li>
    <li><a class="menu__item" href={getLink('/contact')}>{lang === 'en' ? 'Contact' : 'Contact'}</a></li>
  </ul>
</div>
<style>
.hamburger-menu {
  display: none;
}
@media (max-width: 800px) {
  .hamburger-menu {
    display: block;
    z-index: 1001;
  }
  #menu__toggle {
    opacity: 0;
  }
  .menu__btn {
    position: fixed;
    top: 20px;
    left: 20px;
    width: 36px;
    height: 36px;
    cursor: pointer;
    z-index: 1100;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #ffe4ec;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(161, 106, 232, 0.12);
    border: 2px solid #a16ae8;
    transition: background 0.2s, border 0.2s;
  }
  .menu__btn:hover {
    background: #d1baff;
    border-color: #4B2067;
  }
  .menu__btn > span,
  .menu__btn > span::before,
  .menu__btn > span::after {
    display: block;
    position: absolute;
    width: 24px;
    height: 4px;
    background: linear-gradient(90deg, #a16ae8 0%, #ffacfa 100%);
    border-radius: 2px;
    transition: 0.25s;
    box-shadow: 0 1px 4px #d1baff44;
  }
  .menu__btn > span {
    position: relative;
    top: 0;
    left: 0;
  }
  .menu__btn > span::before {
    content: '';
    position: absolute;
    top: -10px;
    width: 24px;
    height: 4px;
    background: inherit;
    border-radius: 2px;
  }
  .menu__btn > span::after {
    content: '';
    position: absolute;
    top: 10px;
    width: 24px;
    height: 4px;
    background: inherit;
    border-radius: 2px;
  }
  #menu__toggle:checked + .menu__btn > span {
    transform: rotate(45deg);
    background: #a16ae8;
  }
  #menu__toggle:checked + .menu__btn > span::before {
    top: 0;
    transform: rotate(0deg);
    background: #a16ae8;
  }
  #menu__toggle:checked + .menu__btn > span::after {
    top: 0;
    transform: rotate(90deg);
    background: #a16ae8;
  }
  .menu__box {
    display: block;
    position: fixed;
    top: 0;
    left: -100%;
    width: 260px;
    height: 100%;
    margin: 0;
    padding: 80px 0;
    list-style: none;
    background: linear-gradient(180deg, #ffe4ec 0%, #d1baff 100%);
    box-shadow: 2px 2px 16px rgba(161, 106, 232, 0.18);
    transition-duration: .25s;
    z-index: 1099;
  }
  #menu__toggle:checked ~ .menu__box {
    left: 0 !important;
  }
  .menu__item {
    display: block;
    padding: 16px 32px;
    color: #4B2067;
    font-family: 'Roboto', sans-serif;
    font-size: 20px;
    font-weight: 600;
    text-decoration: none;
    transition-duration: .25s;
    border-radius: 6px;
    margin: 0 8px;
  }
  .menu__item:hover {
    background-color: #ffd6ec;
    color: #a16ae8;
  }
}
</style>