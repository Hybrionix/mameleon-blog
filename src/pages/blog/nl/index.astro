---
import MainLayout from '../../../layouts/MainLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../../components/FormattedDate.astro';

const allPosts = await getCollection('blog');
const posts = allPosts.filter(post => post.id.startsWith('nl/'));
const blogPrefix = '/blog/nl/';
---

<MainLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
  <main>
    <section>
      <ul>
        {
          posts.map((post) => (
            <li>
              <a href={`${blogPrefix}${post.slug}/`}>
                <img width={720} height={360} src={post.data.heroImage} alt="" />
                <h4 class="title">{post.data.title}</h4>
                <p class="date">
                  <FormattedDate date={new Date(post.data.pubDate)} />
                </p>
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </main>
</MainLayout>
