---
import Layout from '../layouts/MainLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const quotes = [
  "Geloof in jezelf en je bent al halverwege.",
  "Elke dag is een nieuw begin.",
  "Je bent tot geweldige dingen in staat.",
  "Laat jouw glimlach de wereld veranderen.",
  "Begin elke dag met een dankbaar hart.",
  "Doe vandaag iets waar je toekomstige zelf je voor zal bedanken.",
  "Geluk is geen toeval, maar een keuze.",
  "Je bent sterker dan je denkt.",
  "Wees de reden dat iemand vandaag lacht.",
  "Droom groot, werk hard, blijf positief.",
  "Focus op het goede.",
  "Jij bent je enige limiet.",
  "Elke dag een kleine stap vooruit.",
  "Schitter, de wereld heeft jouw licht nodig.",
  "Je bent genoeg.",
  "Groei door wat je meemaakt.",
  "Kies voor vriendelijkheid en lach vaak.",
  "Laat je dromen groter zijn dan je angsten.",
  "Vooruitgang, geen perfectie.",
  "Geniet van de kleine dingen.",
  "Jouw potentieel is eindeloos.",
  "Blijf positief, werk hard, maak het waar.",
  "Je kunt dit.",
  "Wees niet bang om te stralen.",
  "Fouten maken is het bewijs dat je probeert.",
  "Blijf doorgaan, je komt er wel.",
  "Het beste moet nog komen.",
  "Jij bent een kunstwerk.",
  "Maak van vandaag iets moois.",
  "Jouw energie trekt de juiste mensen aan.",
  "Neem tijd voor wat je gelukkig maakt."
];
const today = new Date();
const index = (today.getDate() - 1) % quotes.length;
const quote = quotes[index];
---
<Layout title={`Quote van de dag | ${SITE_TITLE}`} description={SITE_DESCRIPTION}>
  <div style="text-align:center;">
    <h1 style="color:#4B2067;">Quote van de dag</h1>
    <blockquote style="font-size:0.95em;font-style:italic;color:#3c285a;background:#fff3e6;padding:0.3em 0.7em;border-radius:7px;box-shadow:0 2px 5px rgba(0,0,0,0.04);margin:1em 0;display:inline-block;max-width:170px;">
      {quote}
    </blockquote>
    <p style="color:#888;font-size:0.95em;">Kom morgen terug voor een nieuwe inspirerende quote!</p>
  </div>
</Layout>