---
import Layout from '../layouts/MainLayout.astro';
import { getLangProps } from '../utils/lang.js';

const { lang, nlPath, enPath } = getLangProps(Astro.url.pathname);
---

<Layout title={lang === 'en' ? 'Downloads' : 'Downloads'} description={lang === 'en' ? 'Downloads' : 'Downloads'} lang={lang} nlPath={nlPath} enPath={enPath}>
  <h1>{lang === 'en' ? 'Downloads' : 'Downloads'}</h1>
  <p>
    {lang === 'en'
      ? "Here you can find all available downloads."
      : "Hier vind je alle beschikbare downloads."
    }
  </p>
  <!-- Add your download links here, using lang to switch text if needed -->
</Layout>
