---
import '../styles/global.css';
import { ORG_DESCRIPTION } from '../consts';

const { title, description, image = '/blog-placeholder-1.jpg' } = Astro.props;
const path = Astro.url.pathname;
const lang = path.startsWith('/en') ? 'en' : 'nl';
const nlPath = lang === 'en' ? path.replace(/^\/en/, '') || '/' : path;
const enPath = lang === 'nl' ? '/en' + (path === '/' ? '' : path) : path;
const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const ogImage = new URL(image, Astro.site).toString();
const ogLocale = Astro.url.pathname.startsWith('/en') ? 'en_US' : 'nl_NL';
const orgDescription = description && description.length > 30 ? description : ORG_DESCRIPTION;
--- 
<html lang={lang}>
  <head>
    <!-- Global Metadata -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Font preloads -->
    <link rel="preload" href="/fonts/atkinson-regular.woff" as="font" type="font/woff" crossorigin />
    <link rel="preload" href="/fonts/atkinson-bold.woff" as="font" type="font/woff" crossorigin />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content={ogLocale} />
    <meta property="og:site_name" content="Mameleon" />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Structured Data (Organization) -->
    <script type="application/ld+json">{JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Organization",
      "name": "Mameleon",
      "url": "https://www.mameleon.com",
      "description": orgDescription,
      "logo": "https://www.mameleon.com/mameleon_transparant_430.png"
    })}</script>
  </head>
  <body>
    <header>
      <nav class="header-bar">
        <div class="header-content">
          <div class="header-section logo-image">
            <a href={lang === 'en' ? '/en/' : '/'}
              ><img src="/mameleon_transparant_430.png" alt="Mameleon Logo" />
            </a>
          </div>
          <div class="header-section internal-links">
            <a
              href={lang === 'en' ? '/en/' : '/'}
              class={path === (lang === 'en' ? '/en/' : '/') ? 'active' : ''}
              >Home</a
            >
            <a
              href={lang === 'en' ? '/en/about' : '/about'}
              class={path.includes('/about') ? 'active' : ''}
              >About</a
            >
            <a
              href={lang === 'en' ? '/en/blog' : '/blog'}
              class={path.includes('/blog') ? 'active' : ''}
              >Blog</a
            >
            <a
              href={lang === 'en' ? '/en/contact' : '/contact'}
              class={path.includes('/contact') ? 'active' : ''}
              >Contact</a
            >
          </div>
        </div>
      </nav>
      <div class="header-section header-socials">
        <div class="social-links">
          <a href="https://facebook.com/" target="_blank" rel="noopener" aria-label="Facebook">
